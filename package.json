{
  "name": "node-schedule",
  "version": "2.0.0",
  "description": "A cron-like and not-cron-like job scheduler for Node.",
  "keywords": [
    "schedule",
    "task",
    "job",
    "cron",
    "recurrent",
    "in-memory"
  ],
  "license": "MIT",
  "main": "index.js",
  "scripts": {
    "test": "tape test/*.js",
    "test:browser": "airtap test/cancel-long-running-jobs.js test/convenience-method-test.js test/date-convenience-methods-test.js test/range-test.js test/recurrence-rule-test.js test/schedule-cron-jobs.js test/start-end-test.js",
    "coveralls": "nyc report --reporter=lcov",
    "test:coverage": "nyc tape test/*.js",
    "lint": "eslint lib test",
    "lint:fix": "eslint --fix lib test"
  },
  "author": {
    "name": "Matt Patenaude",
    "email": "matt@mattpatenaude.com",
    "url": "http://mattpatenaude.com"
  },
  "contributors": [
    {
      "name": "Igor Savin",
      "email": "kibertoad@gmail.com"
    }
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/node-schedule/node-schedule.git"
  },
  "dependencies": {
    "cron-parser": "^3.1.0",
    "long-timeout": "0.1.1",
    "sorted-array-functions": "^1.3.0"
  },
  "devDependencies": {
    "airtap": "^4.0.1",
    "eslint": "^7.18.0",
    "nyc": "^15.1.0",
    "sinon": "^10.0.1",
    "tape": "^5.1.1"
  },
  "engines": {
    "node": ">=6"
  },
  "files": [
    "CHANGELOG.md",
    "README.md",
    "UPGRADING.md",
    "LICENSE",
    "lib/*"
  ]
}
