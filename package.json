{
  "name": "node-schedule",
  "version": "2.0.0",
  "description": "A cron-like and not-cron-like job scheduler for Node.",
  "keywords": [
    "schedule",
    "task",
    "job",
    "cron",
    "recurrent",
    "in-memory"
  ],
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "ts-node --project test/tsconfig.json node_modules/tape/bin/tape test/*.ts",
    "test:browser": "airtap test/cancel-long-running-jobs.js test/convenience-method-test.js test/date-convenience-methods-test.js test/range-test.js test/recurrence-rule-test.js test/schedule-cron-jobs.js test/start-end-test.js",
    "coveralls": "ts-node --project test/tsconfig.json node_modules/nyc/bin/nyc.js report --reporter=lcov",
    "test:coverage": "ts-node --project test/tsconfig.json node_modules/nyc/bin/nyc.js tape test/*.js",
    "lint": "eslint --ext ts lib test",
    "lint:fix": "eslint --fix --ext ts lib test"
  },
  "author": {
    "name": "Matt Patenaude",
    "email": "matt@mattpatenaude.com",
    "url": "http://mattpatenaude.com"
  },
  "contributors": [
    {
      "name": "Igor Savin",
      "email": "kibertoad@gmail.com"
    }
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/node-schedule/node-schedule.git"
  },
  "dependencies": {
    "cron-parser": "^3.1.0",
    "long-timeout": "0.1.1",
    "sorted-array-functions": "^1.3.0"
  },
  "devDependencies": {
    "@types/long-timeout": "^0.1.0",
    "@types/node": "^14.14.22",
    "@types/sinon": "^9.0.10",
    "@types/sorted-array-functions": "^1.3.0",
    "@types/tape": "^4.13.0",
    "@typescript-eslint/eslint-plugin": "^4.16.1",
    "@typescript-eslint/parser": "^4.16.1",
    "airtap": "^4.0.1",
    "eslint": "^7.18.0",
    "nyc": "^15.1.0",
    "sinon": "^9.2.4",
    "tape": "^5.1.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "engines": {
    "node": ">=6"
  },
  "files": [
    "CHANGELOG.md",
    "README.md",
    "UPGRADING.md",
    "LICENSE",
    "dist/*"
  ]
}
